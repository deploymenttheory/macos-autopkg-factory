<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Basic autopkg settings -->
    <key>CACHE_DIR</key>
    <string>~/Library/AutoPkg/Cache</string>
    <key>MUNKI_REPO</key>
    <string>/Volumes/munki_repo</string>
    <key>RECIPE_REPO_DIR</key>
    <string>~/Library/AutoPkg/RecipeRepos</string>
    
    <!-- Search paths for recipes -->
    <key>RECIPE_SEARCH_DIRS</key>
    <array>
        <string>.</string>
        <string>~/Library/AutoPkg/Recipes</string>
        <string>/Library/AutoPkg/Recipes</string>
    </array>
    
    <!-- Search paths for override files -->
    <key>RECIPE_OVERRIDE_DIRS</key>
    <array>
        <string>~/Library/AutoPkg/RecipeOverrides</string>
    </array>
    
    <!-- Git binary path (optional) -->
    <key>GIT_PATH</key>
    <string>/usr/local/bin/git</string>
    
    <!-- GitHub authentication (optional) -->
    <!-- Use either GITHUB_TOKEN or GITHUB_TOKEN_PATH, not both -->
    <key>GITHUB_TOKEN_PATH</key>
    <string>~/.autopkg_gh_token</string>
    <!-- <key>GITHUB_TOKEN</key>
    <string>ghp_actualTokenValueHere</string> -->
    
    <!-- Recipe trust enforcement -->
    <key>FAIL_RECIPES_WITHOUT_TRUST_INFO</key>
    <false/>
    
    <!-- Additional processor-specific settings can go here -->
    <!-- For example, for JSSImporter -->
    <key>JSS_URL</key>
    <string>https://jamf.example.com:8443</string>
    <key>API_USERNAME</key>
    <string>apiuser</string>
    <key>API_PASSWORD</key>
    <string>apipassword</string>
    
    <!-- For FileWaveImporter -->
    <key>FW_SERVER_URL</key>
    <string>https://filewave.example.com:20443</string>
    
    <!-- For VPPImporter -->
    <key>VPPIMPORTER_COUNTRY</key>
    <string>US</string>
</dict>
</plist>